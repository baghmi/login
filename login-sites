server {
    listen 80;
    listen [::]:80;
    root /var/www/login/html;
    index index.html index.htm index.nginx-debian.html;
    server_name login;
    location / {
        allow 192.168.57.1;
        deny all;
        try_files $uri $uri/ =404;
    }
    location /contact.html {
        auth_basic "√Årea restringida";
        auth_basic_user_file /etc/nginx/.htpasswd;
        try_files $uri $uri/ =404;
    }
    
}